            <p><%= speaker.description %></p>
            <div class="d-flex align-items-center">
              <img
                class="img-fluid flex-shrink-0 rounded"
                src="<%= speaker.image_url %>"
                style="width: 50px; height: 50px"
              />
              <div class="ps-3">
                <h5 class="mb-1"><%= speaker.nom %> <%= speaker.prenom %></h5>
